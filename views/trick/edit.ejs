<h1><%= i18n("Edit Trick") %></h1>

<form class="pure-form pure-form-stacked" action="/tricks/add" method="post">

<fieldset>

    <div class="pure-g">
        <div class="pure-u-1">
            <label for="name"><%= i18n("name:") %></label>
            <input class="pure-u-23-24" type="text" name="name">
        </div>
    </div>

</fieldset>

<fieldset>

    <div class="pure-g">
        <div class="pure-u-1">
            <label for="components"><%= i18n("components:") %></label>
            <input class="pure-u-23-24" type="text" name="components">
        </div>
    </div>

</fieldset>

<fieldset>

    <div class="pure-g">
        <div class="pure-u-1">
            <label for="alias"><%= i18n("alias:") %></label>
            <input class="pure-u-23-24" type="text" name="alias">
        </div>
    </div>

</fieldset>

<div class="pure-controls">
    <button type="submit" class="pure-button"><%= i18n("add trick") %></button>
</div>

</form>
